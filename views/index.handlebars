<div class="container">
	{{#if user}}
		<h1>Hello {{user.username}}</h1>
		<a href="/logout">Logout</a>
	{{else}}
		<a href="/login">Login</a>
		<br>
		<a href="/register">Register</a>
	{{/if}}
</div>
<div class="container">
{{#each posts}}
	<a href="/{{_id}}">{{title}}</a>
	<div class="content">
		{{created}}
		<br>
		{{ssubstring body 0 150}}
		<br>
		{{author}}
	</div>
{{/each}}
</div>