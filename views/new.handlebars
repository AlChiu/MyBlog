<div class="ui container">
	<h1>New Blog Post</h1>
	<form role="form" action="/new" method="post">
		<div class="form-group">
			<label>Title</label>
			<br>
			<input type="text" name="postTitle" placeholder="New Title">
		</div>
		<div class="form-group">
			<label>Post Body</label>
			<br>
			<textarea name="postBody"></textarea>
		</div>
		<button class="ui large blue button">Submit</button>
	</form>
</div>